<% if users.any? %>

<ul class="list-unstyled">
    <% users.each do |user| %>
        <li class="media">
            <img class="mr-2 rounded" src="
                <%= gravatar_url(user, { size: 50 }) %>
                    <%# Helperとして実装 %>
            " alt="">
            <div class="media-body">
                <div>
                    <%= user.name %>
                </div>
                <div>
                    <p>
                        <%= link_to "View profile", user_path(user) %>
                            <%# showルーティング %>
                    </p>
                </div>
                
            </div>
        </li>
      <% end %>
    
</ul>
<%= paginate users %>
<% end %>